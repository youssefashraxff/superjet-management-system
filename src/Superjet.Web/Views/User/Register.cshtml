@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<section class="relative flex flex-col items-center justify-center w-full min-h-screen mx-auto text-center userBg">
    <div class="max-w-md p-6 pt-10 pb-12 mx-auto bg-white shadow rounded-2xl">
    <h2 class="mb-6 text-xl font-semibold text-center">Register</h2>

    <form method="post" action="/User/Register" class="space-y-4">
        <input
            name="UserName"
            placeholder="Username"
            class="w-full p-2 border rounded"
            required />

        <input
            type="password"
            name="Password"
            placeholder="Password"
            class="w-full p-2 border rounded"
            required />

        <button
            type="submit"
            class="w-full px-4 py-2 text-white rounded bg-main hover:opacity-85">
            Register
        </button>
    </form>

    <p class="mt-4 text-sm text-center text-gray-600">
        Do have an account?
        <a href="/User/Login" class="text-blue-600 hover:underline">Login</a>
    </p>
</div>
</section>
