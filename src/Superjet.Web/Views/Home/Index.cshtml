@{
    Layout = "_Layout";
}
<section
  class="mainHome relative w-full h-screen bg-cover bg-center flex flex-col justify-center items-center text-center mx-auto"
>
  <div class="absolute inset-0 bg-black/60"></div>

  <div class="container flex flex-col justify-center items-center text-center mx-auto">
    <h1 class="relative text-5xl font-bold text-white mb-2">
    Book Your Bus Trip Across Egypt.
  </h1>

  <p class="relative font-extralight text-white text-lg opacity-90 mb-6">
    Enjoy comfort, safety.
  </p>

  <!-- Booking Card -->
  <div
      class="relative bg-black/40 backdrop-blur-xl shadow-sm border-white  rounded-3xl py-10 flex justify-evenly w-3/4 gap-0 border border-white/30"

  >
    <!-- FROM -->
    <div class="flex flex-col items-start gap-2">
      <p class="font-semibold text-white">From:</p>
      <select
        class="mt-1 w-full border-0 rounded-lg font-light  text-gray-300  cursor-pointer"
      >
        <option disabled selected >Choose Departure</option>
        <option >Cairo</option>
        <option >Alex</option>
      </select>
    </div>

    <!-- Divider -->
    <div class="h-14 w-px bg-gray-300 hidden md:block"></div>

    <!-- TO -->
     <div class="flex flex-col items-start gap-2">
      <p class="font-semibold text-white">From:</p>
      <select
        class="mt-1 w-full border-0 rounded-lg font-light  text-gray-300 cursor-pointer"
      >
        <option disabled selected >Choose Destination</option>
        <option >Cairo</option>
        <option >Alex</option>
      </select>
    </div>

    <!-- Divider -->
    <div class="h-14 w-px bg-gray-300 hidden md:block"></div>

    <!-- DATE -->
    <div class="flex flex-col items-start gap-2">
      <label class="font-semibold text-white ">
         Departure Date:
      </label>
      <input
        type="date"
        class="mt-1 border-0 rounded-lg font-light text-gray-300 cursor-pointer"
      />
    </div>

    <!-- Divider -->
    <!-- <div class="h-14 w-px bg-gray-300 hidden md:block"></div> -->

    <!-- ROUND TRIP + SEARCH -->
    <div >
      

      <button
        class="mt-3 bg-cyan-900 hover:bg-cyan-800 text-white px-6 py-2 rounded-full font-semibold transition"
      >
        Search
      </button>
    </div>
  </div>
  </div>
</section>
