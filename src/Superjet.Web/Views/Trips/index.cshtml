@{
    Layout = "_Layout";
}
@model List<TripCardViewModel>
<section class="min-h-screen py-12 bg-blue-50">
  <div class="container mx-auto">
    <div
      class="relative flex w-3/4 gap-0 py-10 mx-auto mb-8 bg-white border border-gray-200 shadow-sm rounded-b-3xl justify-evenly">
      <!-- FROM -->
      <div class="flex flex-col items-start gap-2">
        <p class="font-semibold text-gray-400">From:</p>
        <select
          class="w-full mt-1 font-light text-gray-300 border-0 rounded-lg cursor-pointer"
        >
          <option selected>@(Model.Any() ? Model[0].Origin : "From")</option>
          <option>Cairo</option>
          <option>Alex</option>
        </select>
      </div>

      <!-- Divider -->
      <div class="w-px bg-gray-50 h-14"></div>

      <!-- TO -->
      <div class="flex flex-col items-start gap-2">
        <p class="font-semibold text-gray-400">To:</p>
        <select
          class="w-full mt-1 font-light text-gray-300 border-0 rounded-lg cursor-pointer"
        >
          <option selected>@(Model.Any() ? Model[0].Destination : "To")</option>
          <option>Cairo</option>
          <option>Alex</option>
        </select>
      </div>

      <!-- Divider -->
      <div class="w-px bg-gray-50 h-14"></div>

      <!-- DATE -->
      <div class="flex flex-col items-start gap-2">
        <label class="font-semibold text-gray-400"> Departure Date: </label>
        <input
          type="date"
          value="@(Model.Any() ? Model[0].Departure.ToString("yyyy-MM-dd") : "")"
          class="mt-1 font-light text-gray-300 border-0 rounded-lg cursor-pointer"
        />
      </div>

      <!-- Divider -->
      <!-- <div class="hidden w-px bg-gray-300 h-14 md:block"></div> -->

      <!-- ROUND TRIP + SEARCH -->
      <div>
        <button
          class="px-6 py-2 mt-3 font-semibold text-white transition bg-blue-600 rounded-full hover:bg-blue-500"
        >
          Search
        </button>
      </div>
    </div>
    <h1 class="mb-10 text-4xl font-bold text-blue-950">
      Choose your suitable trip
    </h1>
    <div class="grid grid-cols-8 gap-5">
      <!-- Filters -->
      <div class="col-span-2">
        <div
          class="sticky p-5 bg-white border border-gray-200 rounded-lg shadow-sm top-4"
        >
          <div class="flex items-center justify-between mb-6">
            <h3 class="font-bold text-gray-900">Filter by:</h3>
            <button
              type="button"
              class="text-sm font-medium transition-colors text-blue-950 hover:text-blue-900"
            >
              Reset All
            </button>
          </div>

          <form action="" class="space-y-8">
            <div>
              <h4
                class="mb-3 text-sm font-semibold tracking-wide text-gray-900 uppercase"
              >
                Time Departure
              </h4>
              <div class="space-y-3">
                <div class="flex items-center">
                  <input
                    id="time-morning"
                    name="departure_time"
                    type="checkbox"
                    value="morning"
                    class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-blue-950 focus:ring-blue-500 focus:ring-2"
                  />
                  <label
                    for="time-morning"
                    class="flex justify-between flex-1 text-sm text-gray-700 cursor-pointer ms-2"
                  >
                    <span>Morning (06:00 - 12:00)</span>
                    <span class="text-xs text-gray-400">12</span>
                  </label>
                </div>
                <div class="flex items-center">
                  <input
                    id="time-afternoon"
                    name="departure_time"
                    type="checkbox"
                    value="afternoon"
                    class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-blue-950 focus:ring-blue-500 focus:ring-2"
                  />
                  <label
                    for="time-afternoon"
                    class="flex justify-between flex-1 text-sm text-gray-700 cursor-pointer ms-2"
                  >
                    <span>Afternoon (12:00 - 18:00)</span>
                    <span class="text-xs text-gray-400">8</span>
                  </label>
                </div>
                <div class="flex items-center">
                  <input
                    id="time-evening"
                    name="departure_time"
                    type="checkbox"
                    value="evening"
                    class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-blue-950 focus:ring-blue-500 focus:ring-2"
                  />
                  <label
                    for="time-evening"
                    class="flex justify-between flex-1 text-sm text-gray-700 cursor-pointer ms-2"
                  >
                    <span>Evening (18:00 - 06:00)</span>
                    <span class="text-xs text-gray-400">5</span>
                  </label>
                </div>
              </div>
            </div>

            <hr class="border-gray-100" />

            <div>
              <h4
                class="mb-3 text-sm font-semibold tracking-wide text-gray-900 uppercase"
              >
                Price Range
              </h4>
              <div class="space-y-4">
                <div class="relative w-full h-2 bg-gray-200 rounded-lg">
                  <div
                    class="absolute left-0 h-2 rounded-lg bg-main"
                    style="width: 60%"
                  ></div>
                  <div
                    class="absolute left-[60%] w-4 h-4 bg-white border-2 border-blue-950 rounded-full -mt-1 cursor-pointer hover:scale-110 transition-transform"
                  ></div>
                </div>

                <div class="flex items-center space-x-2">
                  <div class="relative">
                    <span
                      class="absolute text-xs text-gray-500 -translate-y-1/2 left-3 top-1/2"
                      >$</span
                    >
                    <input
                      type="number"
                      placeholder="Min"
                      class="w-full pl-6 pr-2 py-1.5 text-sm border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 outline-none"
                    />
                  </div>
                  <span class="text-gray-400">-</span>
                  <div class="relative">
                    <span
                      class="absolute text-xs text-gray-500 -translate-y-1/2 left-3 top-1/2"
                      >$</span
                    >
                    <input
                      type="number"
                      placeholder="Max"
                      class="w-full pl-6 pr-2 py-1.5 text-sm border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 outline-none"
                    />
                  </div>
                </div>
              </div>
            </div>

            <hr class="border-gray-100" />

            <div>
              <h4
                class="mb-3 text-sm font-semibold tracking-wide text-gray-900 uppercase"
              >
                Bus Model
              </h4>
              <div class="space-y-3">
                <div class="flex items-center">
                  <input
                    id="model-ac-sleeper"
                    name="bus_model"
                    type="checkbox"
                    value="ac_sleeper"
                    class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-blue-950 focus:ring-blue-500 focus:ring-2"
                  />
                  <label
                    for="model-ac-sleeper"
                    class="text-sm text-gray-700 cursor-pointer ms-2"
                    >AC Sleeper</label
                  >
                </div>
                <div class="flex items-center">
                  <input
                    id="model-non-ac"
                    name="bus_model"
                    type="checkbox"
                    value="non_ac"
                    class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-blue-950 focus:ring-blue-500 focus:ring-2"
                  />
                  <label
                    for="model-non-ac"
                    class="text-sm text-gray-700 cursor-pointer ms-2"
                    >Non-AC Seater</label
                  >
                </div>
                <div class="flex items-center">
                  <input
                    id="model-volvo"
                    name="bus_model"
                    type="checkbox"
                    value="volvo"
                    class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-blue-950 focus:ring-blue-500 focus:ring-2"
                  />
                  <label
                    for="model-volvo"
                    class="text-sm text-gray-700 cursor-pointer ms-2"
                    >Volvo Multi-Axle</label
                  >
                </div>
                <div class="flex items-center">
                  <input
                    id="model-benz"
                    name="bus_model"
                    type="checkbox"
                    value="benz"
                    class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-blue-950 focus:ring-blue-500 focus:ring-2"
                  />
                  <label
                    for="model-benz"
                    class="text-sm text-gray-700 cursor-pointer ms-2"
                    >Mercedes Benz</label
                  >
                </div>
              </div>
            </div>

            <button
              type="submit"
              class="w-full px-4 py-2 font-medium text-white transition-colors rounded-md shadow-sm bg-main hover:bg-blue-900"
            >
              Apply Filters
            </button>
          </form>
        </div>
      </div>
      <!-- Cards -->
      <div class="col-span-4">
        @foreach(var trip in Model){
          <div
          class="flex items-center px-0 py-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm justify-evenly">
          <!-- Details -->
          <div class="flex flex-col gap-1">
            <span
              class="px-2 py-1 text-xs font-medium text-gray-800 bg-orange-400 rounded-tr-md rounded-bl-md w-fit"
              >@trip.BusModel</span
            >
            <!-- Timess -->
            <div
              class="flex items-center gap-2 text-xl font-bold text-gray-700"
            >
              <p>@trip.Departure.ToShortTimeString()</p>
              <div class="flex items-center">
                <!-- Start circle -->
                <div class="w-1 h-1 bg-gray-400 rounded-full"></div>

                <!-- Line -->
                <div class="w-10 h-px bg-gray-400"></div>

                <!-- End circle -->
                <div class="w-1 h-1 border border-gray-400 rounded-full"></div>
              </div>
              <p>@trip.Arrival.ToShortTimeString() PM</p>
            </div>
            <p class="text-xs text-gray-400">@trip.Departure.ToString("dddd, dd MMM yyyy")</p>
            <p class="text-sm text-gray-600">
              <i class="fas fa-location-dot me-1"></i
              ><span>@trip.Origin <i class="fas fa-arrow-right"></i> @trip.Destination</span>
            </p>
          </div>
          <div class="w-px h-20 bg-gray-300"></div>
          <!-- Option -->
          <div class="flex flex-col items-center gap-0">
            <!-- Fair -->
            <p class="text-xl font-semibold text-gray-700">@trip.Price EGP</p>
            <p class="text-xs text-gray-400">23 seats remaining</p>
            <div>
              <button
                class="flex items-center justify-center gap-2 px-4 py-2 mt-3 text-white rounded-lg text-md bg-main hover:bg-blue-900"
              >
                Select <i class="fas fa-arrow-right"></i>
              </button>
            </div>
          </div>
        </div>
        }
      </div>
      <!-- User Cart -->
      <div class="col-span-2">
        <div
          class="sticky p-5 bg-white border border-gray-200 rounded-lg shadow-sm top-4"
        >
          <div class="flex items-center justify-between mb-6">
            <h3 class="font-bold text-gray-900">Your Tickets:</h3>
            <button
              type="button"
              class="text-sm font-medium text-red-700 transition-colors hover:text-red-500"
            >
              Remove All
            </button>
          </div>

          <form action="" class="space-y-8">
            <div
              class="flex flex-col gap-1 p-4 border border-gray-200 rounded-lg"
            >
              <span
                class="px-2 py-1 text-xs font-medium text-gray-800 bg-orange-400 rounded-tr-md rounded-bl-md w-fit"
                >Premium Bus</span
              >
              <!-- Timess -->
              <div
                class="flex items-center gap-2 font-semibold text-gray-700 text-md"
              >
                <p>01:30 AM</p>
                <div class="flex items-center">
                  <!-- Start circle -->
                  <div class="w-1 h-1 bg-gray-400 rounded-full"></div>

                  <!-- Line -->
                  <div class="w-10 h-px bg-gray-400"></div>

                  <!-- End circle -->
                  <div
                    class="w-1 h-1 border border-gray-400 rounded-full"
                  ></div>
                </div>
                <p>05:20 PM</p>
              </div>
              <p class="text-xs text-gray-400">Thursday 21/12/2025</p>
              <p class="text-xs text-gray-600">
                <span>Cairo <i class="fas fa-arrow-right"></i> Hurghada</span>
              </p>

              <p class="flex justify-between">
                <span>Ticket</span> <span>200.00EGP</span>
              </p>
            </div>
            <hr class="!mt-3 border-gray-200" />

            <h4
              class="flex justify-between font-semibold text-gray-900 text-md !mt-2"
            >
              <span>Total</span> <span>200.00EGP</span>
            </h4>

            <button
              type="submit"
              class="w-full px-4 py-2 !mt-2 font-medium text-white transition-colors bg-main rounded-md shadow-sm hover:bg-blue-900"
            >
              Checkout
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
